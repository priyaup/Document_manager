<h1>Index pages</h1>

<p><%= notice %></p>

<h1>Listing tasks Here</h1>
<%= link_to 'New task', new_task_path%> || <%= link_to 'Back to Employee Page', employees_path%> || <%= link_to 'Back to Document page', documents_path%>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Employee</th>
			<th colspan="3">Action</th>
	  </tr>
	</thead>
	<tbody>
		<% @tasks.each do |task| %>
			<tr>
				<td><%= task.title%></td>
				<td><%= link_to task.employee.full_name, employee_path(task.employee)%></td>
				<td><%= link_to 'View' , task %></td>
				<td><%= link_to 'Edit' , edit_task_path(task) %></td>
				<td><%= link_to 'Delete' , task_path(task), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>

	</tbody>
</table>