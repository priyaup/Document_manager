<div class="container mt-5">
    <h1 class="mb-4 text-dark">Document Listing</h1>

    <div class="mb-3">
        <%= link_to 'New Document', new_document_path, class: 'btn btn-success' %>
        <%= link_to 'Back to Employee Page', employees_path, class: 'btn btn-secondary ms-2' %>
        <%= link_to 'Task Page', tasks_path, class: 'btn btn-primary ms-2' %>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Document Type</th>
                <th>Employee Name</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name%></td>
                    <td><%= document.doc_type %></td>
                    <td><%= link_to document.employee.full_name, employee_path(document.employee), class: 'text-decoration-none' %></td>
                    <td><%= link_to 'View', document, class: 'btn btn-info btn-sm' %></td>
                    <td><%= link_to 'Edit', edit_document_path(document), class: 'btn btn-warning btn-sm' %></td>
                    <td>
                        <%= link_to 'Delete', document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
