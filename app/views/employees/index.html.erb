<p><%= notice %></p>

<div class="container mt-5">
    <h1 class="mb-4">Employee Listing</h1>

    <div class="mb-3">
        <%= link_to 'New Employee', new_employee_path, class: 'btn btn-success' %>
        <%= link_to 'Document Page', documents_path, class: 'btn btn-primary ms-2' %>
        <%= link_to 'Task Page', tasks_path, class: 'btn btn-primary ms-2' %>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Employee Name</th>
                <th>Email</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
                <tr id="<%= employee.id %>">
                    <td><%= employee.full_name %></td>
                    <td><%= employee.email %></td>
                    <td><%= link_to 'View', employee, class: 'btn btn-info btn-sm' %></td>
                    <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning btn-sm' %></td>
                    <td class="destroy">
                        <%= link_to 'Delete', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
